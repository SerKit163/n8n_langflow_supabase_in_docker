{
    email {CADDY_EMAIL}
    # ZeroSSL - бесплатная альтернатива Let's Encrypt без строгих лимитов
    # Переключено на ZeroSSL для обхода лимитов Let's Encrypt
    acme_ca https://acme.zerossl.com/v2/DV90
    # Caddy автоматически перенаправляет HTTP на HTTPS
}

# N8N
{N8N_DOMAIN} {
    reverse_proxy n8n:5678 {
        header_up Host {host}
    }
}

# Langflow
{LANGFLOW_DOMAIN} {
    reverse_proxy langflow:7860 {
        header_up Host {host}
        
        # Увеличиваем таймауты для Langflow (для работы с AI агентами)
        transport http {
            dial_timeout 30s
            response_header_timeout 120s
            read_timeout 300s
            write_timeout 300s
        }
    }
}

# Supabase Studio
{SUPABASE_DOMAIN} {
    basic_auth {
        {SUPABASE_ADMIN_LOGIN} {SUPABASE_ADMIN_PASSWORD_HASH}
    }
    reverse_proxy supabase-studio:3000 {
        header_up Host {host}
    }
}

# Ollama (если включен)
{OLLAMA_DOMAIN} {
    reverse_proxy ollama:11434 {
        header_up Host {host}
    }
}

